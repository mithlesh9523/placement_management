<?import javafx.scene.text.Font?>

<BorderPane prefHeight="704.0" prefWidth="752.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagement.Placement">
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" style="-fx-border-color: grey; -fx-border-radius: 10;">
               <children>
                  <HBox alignment="CENTER" prefHeight="151.0" prefWidth="614.0">
                     <children>
                        <Label prefHeight="32.0" prefWidth="306.0" text="ASK YOUR QUESTION'S" underline="true">
                           <font>
                              <Font name="Arial Black" size="22.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" style="-fx-background-color: black;" />
                  <VBox prefHeight="80.0" prefWidth="598.0">
                     <children>
                        <Label text="NAME :">
                           <font>
                              <Font name="Arial Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nametf" prefHeight="40.0" prefWidth="205.0" promptText="Enter name :" style="-fx-border-color: GREY; -fx-border-radius: 6; -fx-background-radius: 6;">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets left="45.0" right="45.0" top="20.0" />
                     </VBox.margin>
                  </VBox>
                  <HBox prefHeight="82.0" prefWidth="579.0">
                     <VBox.margin>
                        <Insets left="45.0" right="45.0" top="20.0" />
                     </VBox.margin>
                     <children>
                        <VBox prefHeight="76.0" prefWidth="290.0">
                           <children>
                              <Label text="STUDENT ID :">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="studentidtf" prefHeight="40.0" prefWidth="205.0" promptText="Enter Student Id :" style="-fx-border-color: GREY; -fx-border-radius: 6; -fx-background-radius: 6;">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox layoutX="240.0" layoutY="10.0" prefHeight="76.0" prefWidth="290.0">
                           <children>
                              <Label text="COURSE :">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="coursecb" prefHeight="40.0" prefWidth="286.0" style="-fx-border-color: GREY; -fx-border-radius: 6; -fx-background-radius: 6;">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </ComboBox>
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <Label text="QUESTION'S :">
                           <font>
                              <Font name="Arial Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="questionsta" style="-fx-border-color: GREY; -fx-border-radius: 6;">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></TextArea>
                     </children>
                     <VBox.margin>
                        <Insets left="45.0" right="45.0" top="40.0" />
                     </VBox.margin>
                  </VBox>
                  <HBox alignment="BOTTOM_CENTER" prefHeight="61.0" prefWidth="691.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="150.0" style="-fx-background-color: RED; -fx-background-radius: 6;" text="RESET" textFill="WHITE">
                           <font>
                              <Font name="Arial Bold" size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </HBox.margin>
                        </Button>
                        <Button layoutX="280.0" layoutY="20.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="150.0" style="-fx-background-color: blue; -fx-background-radius: 6;" text="SAVE" textFill="WHITE">
                           <font>
                              <Font name="Arial Bold" size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
